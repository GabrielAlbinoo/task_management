{
  "openapi": "3.0.3",
  "info": {
    "title": "API - Gerenciamento de Tarefas",
    "version": "1.0.0",
    "description": "Documentação da API."
  },
  "servers": [
    { "url": "/api", "description": "Servidor local" }
  ],
  "tags": [
    { "name": "Auth" },
    { "name": "Tarefas" }
  ],
  "components": {
    "securitySchemes": {
      "BearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "Task": {
        "type": "object",
        "properties": {
          "id": { "type": "integer", "example": 1 },
          "titulo": { "type": "string", "example": "Comprar pão" },
          "descricao": { "type": "string", "nullable": true, "example": "Na padaria da esquina" },
          "status": { "type": "string", "enum": ["aberto", "em_andamento", "finalizado"], "example": "aberto" },
          "prioridade": { "type": "string", "enum": ["baixa", "media", "alta"], "example": "media" },
          "responsavel": { "type": "integer", "nullable": true, "example": 2 },
          "criado_em": { "type": "string", "format": "date-time" },
          "atualizado_em": { "type": "string", "format": "date-time" }
        }
      },
      "PaginatedTasks": {
        "type": "object",
        "properties": {
          "success": { "type": "boolean", "example": true },
          "message": { "type": "string" },
          "data": { "type": "array", "items": { "$ref": "#/components/schemas/Task" } },
          "pagination": {
            "type": "object",
            "properties": {
              "current_page": { "type": "integer" },
              "last_page": { "type": "integer" },
              "per_page": { "type": "integer" },
              "total": { "type": "integer" },
              "from": { "type": ["integer", "null"] },
              "to": { "type": ["integer", "null"] },
              "has_more_pages": { "type": "boolean" }
            }
          }
        }
      },
      "ErrorResponse": {
        "type": "object",
        "properties": {
          "success": { "type": "boolean", "example": false },
          "message": { "type": "string" },
          "errors": {
            "type": ["object", "null"],
            "additionalProperties": { "type": "array", "items": { "type": "string" } }
          },
          "status_code": { "type": "integer", "example": 403 }
        }
      },
      "ValidationErrorResponse": {
        "type": "object",
        "properties": {
          "success": { "type": "boolean", "example": false },
          "message": { "type": "string", "example": "The given data was invalid." },
          "errors": {
            "type": "object",
            "additionalProperties": { "type": "array", "items": { "type": "string" } }
          },
          "status_code": { "type": "integer", "example": 422 }
        }
      }
    }
  },
  "paths": {
    "/login": {
      "post": {
        "tags": ["Auth"],
        "summary": "Login",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["email", "password"],
                "properties": {
                  "email": { "type": "string", "format": "email", "example": "alice@example.com" },
                  "password": { "type": "string", "format": "password", "example": "password123" }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login realizado",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "user": {
                      "type": "object",
                      "properties": {
                        "id": { "type": "integer" },
                        "name": { "type": "string" },
                        "email": { "type": "string" }
                      }
                    },
                    "token": { "type": "string" }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Credenciais inválidas",
            "content": { "application/json": { "schema": { "$ref": "#/components/schemas/ErrorResponse" } } }
          },
          "422": {
            "description": "Erro de validação",
            "content": { "application/json": { "schema": { "$ref": "#/components/schemas/ValidationErrorResponse" } } }
          }
        }
      }
    },
    "/register": {
      "post": {
        "tags": ["Auth"],
        "summary": "Registrar usuário",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["name", "email", "password"],
                "properties": {
                  "name": { "type": "string" },
                  "email": { "type": "string", "format": "email" },
                  "password": { "type": "string", "format": "password", "minLength": 8 }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Usuário criado",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "user": {
                      "type": "object",
                      "properties": {
                        "id": { "type": "integer" },
                        "name": { "type": "string" },
                        "email": { "type": "string" }
                      }
                    },
                    "token": { "type": "string" }
                  }
                }
              }
            }
          },
          "422": {
            "description": "Erro de validação",
            "content": { "application/json": { "schema": { "$ref": "#/components/schemas/ValidationErrorResponse" } } }
          }
        }
      }
    },
    "/logout": {
      "post": {
        "tags": ["Auth"],
        "summary": "Logout",
        "security": [{ "BearerAuth": [] }],
        "responses": {
          "200": { "description": "Logout realizado" },
          "401": {
            "description": "Não autenticado",
            "content": { "application/json": { "schema": { "$ref": "#/components/schemas/ErrorResponse" } } }
          }
        }
      }
    },
    "/tarefas": {
      "get": {
        "tags": ["Tarefas"],
        "summary": "Listar tarefas",
        "security": [{ "BearerAuth": [] }],
        "parameters": [
          { "name": "per_page", "in": "query", "schema": { "type": "integer", "default": 15 } },
          { "name": "priority", "in": "query", "schema": { "type": "string", "enum": ["baixa", "media", "alta"] } },
          { "name": "status", "in": "query", "schema": { "type": "string", "enum": ["aberto", "em_andamento", "finalizado"] } },
          { "name": "search", "in": "query", "schema": { "type": "string" } }
        ],
        "responses": {
          "200": {
            "description": "Lista paginada",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/PaginatedTasks" },
                "example": {
                  "success": true,
                  "data": [
                    {
                      "id": 4,
                      "titulo": "Nova Tarefa",
                      "descricao": null,
                      "status": "aberto",
                      "prioridade": "alta",
                      "responsavel": null,
                      "criado_em": "2025-09-23T12:25:42.000000Z",
                      "atualizado_em": "2025-09-23T12:25:42.000000Z"
                    }
                  ],
                  "pagination": {
                    "current_page": 3,
                    "last_page": 12,
                    "per_page": 1,
                    "total": 12,
                    "from": 3,
                    "to": 3,
                    "has_more_pages": true
                  },
                  "filters_applied": []
                }
              }
            }
          },
          "401": {
            "description": "Não autenticado",
            "content": { "application/json": { "schema": { "$ref": "#/components/schemas/ErrorResponse" } } }
          }
        }
      },
      "post": {
        "tags": ["Tarefas"],
        "summary": "Criar tarefa",
        "security": [{ "BearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["titulo"],
                "properties": {
                  "titulo": { "type": "string" },
                  "descricao": { "type": "string" },
                  "prioridade": { "type": "string", "enum": ["baixa", "media", "alta"] }
                },
                "additionalProperties": false
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Tarefa criada",
            "content": {
              "application/json": {
                "example": {
                  "success": true,
                  "message": "Tarefa criada",
                  "data": {
                    "titulo": "teste alegal",
                    "descricao": "AAAAAaA",
                    "status": "aberto",
                    "atualizado_em": "2025-09-29T05:18:57.000000Z",
                    "criado_em": "2025-09-29T05:18:57.000000Z",
                    "id": 28,
                    "responsavel_nome": null,
                    "responsavel_email": null,
                    "responsavel_user": null
                  }
                }
              }
            }
          },
          "401": {
            "description": "Não autenticado",
            "content": { "application/json": { "schema": { "$ref": "#/components/schemas/ErrorResponse" } } }
          },
          "422": {
            "description": "Erro de validação",
            "content": { "application/json": { "schema": { "$ref": "#/components/schemas/ValidationErrorResponse" } } }
          }
        }
      }
    },
    "/tarefas/{id}": {
      "get": {
        "tags": ["Tarefas"],
        "summary": "Obter tarefa",
        "security": [{ "BearerAuth": [] }],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "integer" } }
        ],
        "responses": {
          "200": {
            "description": "Detalhe da tarefa",
            "content": {
              "application/json": {
                "example": {
                  "success": true,
                  "message": "Tarefa retornada",
                  "data": {
                    "id": 10,
                    "titulo": "asdasd",
                    "descricao": "",
                    "status": "finalizado",
                    "prioridade": "media",
                    "responsavel": 2,
                    "criado_em": "2025-09-26T00:21:52.000000Z",
                    "atualizado_em": "2025-09-28T17:37:05.000000Z",
                    "responsavel_nome": "Teste",
                    "responsavel_email": "teste@teste.com",
                    "responsavel_user": {
                      "id": 2,
                      "name": "Teste",
                      "email": "teste@teste.com"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Tarefa não encontrada",
            "content": {
              "application/json": {
                "example": {
                  "success": false,
                  "message": "Tarefa não encontrada",
                  "errors": [],
                  "status_code": 404
                }
              }
            }
          }
        }
      },
      "put": {
        "tags": ["Tarefas"],
        "summary": "Atualizar tarefa",
        "security": [{ "BearerAuth": [] }],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "integer" } }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "titulo": { "type": "string" },
                  "descricao": { "type": "string" },
                  "status": { "type": "string", "enum": ["aberto", "em_andamento", "finalizado"] },
                  "prioridade": { "type": "string", "enum": ["baixa", "media", "alta"] },
                  "responsavel": { "type": "integer", "nullable": true }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Atualizada",
            "content": {
              "application/json": {
                "example": {
                  "success": true,
                  "message": "Tarefa atualizada",
                  "data": {
                    "id": 28,
                    "titulo": "teste alegal",
                    "descricao": "AAAAAaA",
                    "status": "aberto",
                    "prioridade": "media",
                    "responsavel": null,
                    "criado_em": "2025-09-29T05:18:57.000000Z",
                    "atualizado_em": "2025-09-29T05:18:57.000000Z",
                    "responsavel_nome": null,
                    "responsavel_email": null,
                    "responsavel_user": null
                  }
                }
              }
            }
          },
          "401": {
            "description": "Não autenticado",
            "content": { "application/json": { "schema": { "$ref": "#/components/schemas/ErrorResponse" } } }
          },
          "403": {
            "description": "Proibido",
            "content": { "application/json": { "schema": { "$ref": "#/components/schemas/ErrorResponse" } } }
          },
          "404": { "description": "Não encontrada" },
          "422": {
            "description": "Erro de validação",
            "content": { "application/json": { "schema": { "$ref": "#/components/schemas/ValidationErrorResponse" } } }
          }
        }
      },
      "delete": {
        "tags": ["Tarefas"],
        "summary": "Excluir tarefa",
        "security": [{ "BearerAuth": [] }],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "integer" } }
        ],
        "responses": {
          "200": {
            "description": "Excluída",
            "content": {
              "application/json": {
                "example": {
                  "success": true,
                  "message": "Tarefa removida"
                }
              }
            }
          },
          "404": {
            "description": "Tarefa não encontrada",
            "content": {
              "application/json": {
                "example": {
                  "success": false,
                  "message": "Tarefa não encontrada",
                  "errors": [],
                  "status_code": 404
                }
              }
            }
          }
        }
      }
    },
    "/tarefas/{id}/pegar": {
      "post": {
        "tags": ["Tarefas"],
        "summary": "Pegar tarefa (atribuir responsável e iniciar)",
        "security": [{ "BearerAuth": [] }],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "integer" } }
        ],
        "responses": {
          "200": {
            "description": "Tarefa atribuída",
            "content": {
              "application/json": {
                "example": {

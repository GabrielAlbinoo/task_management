{
  "openapi": "3.0.3",
  "info": {
    "title": "API - Gerenciamento de Tarefas",
    "version": "1.0.0",
    "description": "Documentação da API."
  },
  "servers": [
    { "url": "/api", "description": "Servidor local" }
  ],
  "tags": [
    { "name": "Auth" },
    { "name": "Tarefas" }
  ],
  "components": {
    "securitySchemes": {
      "BearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "Task": {
        "type": "object",
        "properties": {
          "id": { "type": "integer", "example": 1 },
          "titulo": { "type": "string", "example": "Comprar pão" },
          "descricao": { "type": "string", "nullable": true, "example": "Na padaria da esquina" },
          "status": { "type": "string", "enum": ["aberto", "em_andamento", "finalizado"], "example": "aberto" },
          "prioridade": { "type": "string", "enum": ["baixa", "media", "alta"], "example": "media" },
          "responsavel": { "type": "integer", "nullable": true, "example": 2 },
          "criado_em": { "type": "string", "format": "date-time" },
          "atualizado_em": { "type": "string", "format": "date-time" }
        }
      },
      "PaginatedTasks": {
        "type": "object",
        "properties": {
          "success": { "type": "boolean", "example": true },
          "message": { "type": "string" },
          "data": { "type": "array", "items": { "$ref": "#/components/schemas/Task" } },
          "pagination": {
            "type": "object",
            "properties": {
              "current_page": { "type": "integer" },
              "last_page": { "type": "integer" },
              "per_page": { "type": "integer" },
              "total": { "type": "integer" },
              "from": { "type": ["integer", "null"] },
              "to": { "type": ["integer", "null"] },
              "has_more_pages": { "type": "boolean" }
            }
          }
        }
      }
    }
  },
  "paths": {
    "/login": {
      "post": {
        "tags": ["Auth"],
        "summary": "Login",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["email", "password"],
                "properties": {
                  "email": { "type": "string", "format": "email", "example": "alice@example.com" },
                  "password": { "type": "string", "format": "password", "example": "password123" }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login realizado",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "user": {
                      "type": "object",
                      "properties": {
                        "id": { "type": "integer" },
                        "name": { "type": "string" },
                        "email": { "type": "string" }
                      }
                    },
                    "token": { "type": "string" }
                  }
                }
              }
            }
          },
          "401": { "description": "Credenciais inválidas" }
        }
      }
    },
    "/register": {
      "post": {
        "tags": ["Auth"],
        "summary": "Registrar usuário",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["name", "email", "password"],
                "properties": {
                  "name": { "type": "string" },
                  "email": { "type": "string", "format": "email" },
                  "password": { "type": "string", "format": "password", "minLength": 8 }
                }
              }
            }
          }
        },
        "responses": {
          "201": { "description": "Usuário criado" }
        }
      }
    },
    "/logout": {
      "post": {
        "tags": ["Auth"],
        "summary": "Logout",
        "security": [{ "BearerAuth": [] }],
        "responses": {
          "200": { "description": "Logout realizado" }
        }
      }
    },
    "/tarefas": {
      "get": {
        "tags": ["Tarefas"],
        "summary": "Listar tarefas",
        "security": [{ "BearerAuth": [] }],
        "parameters": [
          { "name": "per_page", "in": "query", "schema": { "type": "integer", "default": 15 } },
          { "name": "priority", "in": "query", "schema": { "type": "string", "enum": ["baixa", "media", "alta"] } },
          { "name": "status", "in": "query", "schema": { "type": "string", "enum": ["aberto", "em_andamento", "finalizado"] } },
          { "name": "search", "in": "query", "schema": { "type": "string" } }
        ],
        "responses": {
          "200": {
            "description": "Lista paginada",
            "content": { "application/json": { "schema": { "$ref": "#/components/schemas/PaginatedTasks" } } }
          }
        }
      },
      "post": {
        "tags": ["Tarefas"],
        "summary": "Criar tarefa",
        "security": [{ "BearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["titulo"],
                "properties": {
                  "titulo": { "type": "string" },
                  "descricao": { "type": "string" },
                  "prioridade": { "type": "string", "enum": ["baixa", "media", "alta"] }
                },
                "additionalProperties": false
              }
            }
          }
        },
        "responses": {
          "201": { "description": "Tarefa criada" }
        }
      }
    },
    "/tarefas/{id}": {
      "get": {
        "tags": ["Tarefas"],
        "summary": "Obter tarefa",
        "security": [{ "BearerAuth": [] }],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "integer" } }
        ],
        "responses": { "200": { "description": "Detalhe da tarefa" }, "404": { "description": "Não encontrada" } }
      },
      "put": {
        "tags": ["Tarefas"],
        "summary": "Atualizar tarefa",
        "security": [{ "BearerAuth": [] }],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "integer" } }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "titulo": { "type": "string" },
                  "descricao": { "type": "string" },
                  "status": { "type": "string", "enum": ["aberto", "em_andamento", "finalizado"] },
                  "prioridade": { "type": "string", "enum": ["baixa", "media", "alta"] },
                  "responsavel": { "type": "integer", "nullable": true }
                }
              }
            }
          }
        },
        "responses": { "200": { "description": "Atualizada" }, "404": { "description": "Não encontrada" } }
      },
      "delete": {
        "tags": ["Tarefas"],
        "summary": "Excluir tarefa",
        "security": [{ "BearerAuth": [] }],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "integer" } }
        ],
        "responses": { "200": { "description": "Excluída" }, "404": { "description": "Não encontrada" } }
      }
    },
    "/tarefas/{id}/pegar": {
      "post": {
        "tags": ["Tarefas"],
        "summary": "Pegar tarefa (atribuir responsável e iniciar)",
        "security": [{ "BearerAuth": [] }],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "integer" } }
        ],
        "responses": {
          "200": { "description": "Tarefa atribuída" },
          "403": { "description": "Tarefa já possui responsável" },
          "404": { "description": "Não encontrada" },
          "422": { "description": "Não é possível pegar tarefa finalizada" }
        }
      }
    },
    "/tarefas/{id}/finalizar": {
      "post": {
        "tags": ["Tarefas"],
        "summary": "Finalizar tarefa (apenas responsável)",
        "security": [{ "BearerAuth": [] }],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "integer" } }
        ],
        "responses": {
          "200": { "description": "Tarefa finalizada" },
          "403": { "description": "Apenas o responsável pode finalizar" },
          "404": { "description": "Não encontrada" }
        }
      }
    }
  }
}


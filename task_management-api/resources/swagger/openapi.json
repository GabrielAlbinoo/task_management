                      "updated_at": "2025-09-29T06:28:55.000000Z"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Tarefa não encontrada",
            "content": {
              "application/json": {
                "example": {
                  "success": false,
                  "message": "Tarefa não encontrada",
                  "errors": [],
                  "status_code": 404
                }
              }
            }
          }
        }
      }
    },
    "/tarefas/{id}/finalizar": {
      "post": {
        "tags": ["Tarefas"],
        "summary": "Finalizar tarefa (apenas responsável)",
        "security": [{ "BearerAuth": [] }],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "integer" } }
        ],
        "responses": {
          "200": {
            "description": "Tarefa finalizada",
            "content": {
              "application/json": {
                "example": {
                  "success": true,
                  "message": "Tarefa finalizada",
                  "data": {
                    "id": 4,
                    "titulo": "aaa",
                    "descricao": "",
                    "status": "finalizado",
                    "prioridade": "baixa",
                    "responsavel": 1,
                    "criado_em": "2025-09-29T06:37:41.000000Z",
                    "atualizado_em": "2025-09-29T06:38:07.000000Z",
                    "responsavel_nome": "Alice",
                    "responsavel_email": "alice@example.com",
                    "responsavel_user": {
                      "id": 1,
                      "name": "Alice",
                      "email": "alice@example.com",
                      "email_verified_at": null,
                      "created_at": "2025-09-29T06:28:55.000000Z",
                      "updated_at": "2025-09-29T06:28:55.000000Z"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Tarefa não encontrada",
            "content": {
              "application/json": {
                "example": {
                  "success": false,
                  "message": "Tarefa não encontrada",
                  "errors": [],
                  "status_code": 404
                }
              }
            }
          }
        }
      }
    }
  }
}

